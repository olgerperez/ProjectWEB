@model IEnumerable<ProjectWEB.Models.Transacciones>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.RouteLink(" Agregar Transacciones", new { controller = "Transacciones", action = "Create" }, new { @class = "glyphicon glyphicon-plus col-lg-2 btn btn-success submit-button pull-right" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.producto_ofrecido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.producto_interes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.estado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.producto_ofrecido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.producto_interes)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.estado)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.id }, new { @class = "btn btn-primary glyphicon glyphicon-pencil" })
            @Html.ActionLink("Details", "Details", new { id = item.id }, new { @class = "btn btn-warning glyphicon glyphicon-eye-open" })
            @Html.ActionLink("Delete", "Delete", new { id = item.id }, new { @class = "btn btn-danger glyphicon glyphicon-remove" })


        </td>
    </tr>
}

</table>
